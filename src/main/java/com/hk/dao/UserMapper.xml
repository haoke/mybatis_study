<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hk.dao.UserMapper">

    <select id="findUserById" parameterType="int" resultType="User">
        select *         from user        where id = #{id}
    </select>

    <select id="findUserByNameAndIdIn" parameterType="user" resultType="user">

        select * from user
        <where>
            <include refid="query_user_where_id_in"/>
        </where>
    </select>
    <sql id="query_user_where_id_in">
        <bind name="password" value="'%' + password + '%'"/>
        <if test="username != null and username != ''">
            and username like concat('%', #{username},'%')
        </if>
            or password like #{password}
        <foreach collection="ids" open="and id in (" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </sql>

    <select id="findUserById" parameterType="com.hk.pojo.User" >
        select * from user where  id = #{id}
    </select>
    <!-- Insert -->
    <insert id="insertUser" parameterType="com.hk.pojo.User">
        <selectKey keyProperty="id" order="AFTER" resultType="int">
            select last_insert_id()
        </selectKey>
        insert into user(username, password) values (#{username},#{password})
    </insert>

    <update id="updateUser" parameterType="user">
        update user
        <trim>
            <set>
                <if test="username != null">
                    username = #{username},
                </if>
                <if test="password != null">
                    password = #{password},
                </if>
            </set>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int" >
        delete from user  where id = #{id}
    </delete>


</mapper>